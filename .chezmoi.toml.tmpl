{{/* Languages */}}
{{- $hasJavaLang := false -}}

{{- $email := "" -}}
{{- if (hasKey . "email") -}}
    {{- $email = .email -}}
{{- else -}}
    {{- $email = promptString "primary email" -}}
{{- end -}}

{{- if and (hasKey "lang") (hasKey .lang "java") -}}
    {{- $hasJavaLang = .lang.java -}}
{{- else -}}
    {{- $hasJavaLang = promptBool "Install java" -}}
{{- end -}}

[data]
    email = "{{ $email }}"

    [data.lang]
        java = {{ $hasJavaLang }}

[edit]
    command = "code"
    args = ["--wait"]
